<header>
  <h1 class="burgers">Burgers!!</h1>
</header>
<div class="container burgerImgContainer">
  <img src="https://www.thechunkychef.com/wp-content/uploads/2018/05/Juicy-Lucy-Cheese-Stuffed-Burgers-3-680x622.jpg"
    alt="Cheeseburger">

</div>

<div class="container ">
  <div class="row">
    <div class="col col-xs-12 needsDevour">
      <h2>Burgers that need devouring!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col alreadyDevoured">
      <h2>Burgers devoured already</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>


  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col addBurger center">

      <h2>Add a Burger!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Already Devoured? How?<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>

    </div>
  </div>
</div>